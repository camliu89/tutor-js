#!/bin/bash

set -e

if [ $# -ne 0 ]; then
  if [ "$1" == "staged" ]; then
    files=`git status --short */{src,specs} | egrep '^[^D|^R].*(jsx?)$' | awk '{ print $2 }'`
    if [ ! -z "$files" ]; then
      $(npm bin)/eslint $2 $files
    fi
  else
    $(npm bin)/eslint --fix $1/{src,specs}
  fi
  exit $?
fi

if [[ ! -z "${OX_PROJECT}" ]]; then
   $(npm bin)/eslint --fix $OX_PROJECT/{src,specs}
   exit $?
fi

$(npm bin)/eslint --fix {tutor,shared,exercises}/{src,specs}
